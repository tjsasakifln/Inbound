# Example .env file for environment variables configuration

# OpenAI API Key (required for email scorer)
OPENAI_API_KEY="your_openai_api_key_here"

# Celery broker URL (Redis is the default)
CELERY_BROKER_URL="redis://redis:6379/0"

# PostgreSQL database connection URL
# Format: postgresql+psycopg://user:password@host:port/database
DATABASE_URL="postgresql+psycopg://user:pass@db:5432/inbound"

# Path to Google OAuth client secrets file (usually client_secrets.json)
# This file should NOT be versioned.
GOOGLE_CLIENT_SECRETS_FILE="client_secrets.json"

# Redirect URI for Google OAuth
GOOGLE_REDIRECT_URI="http://localhost:8000/auth/google/callback"

# Google OAuth Client ID
GOOGLE_CLIENT_ID="your_google_client_id_here"

# Google OAuth Client Secret
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# API URL for the frontend
VITE_API_URL="http://localhost:8000"